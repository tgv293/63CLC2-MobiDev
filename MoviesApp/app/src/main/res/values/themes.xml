<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">@color/light_dark2</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="Theme.MoviesApp" parent="Base.Theme.MoviesApp" />
    <style name="OverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/overflowmenu</item>
    </style>
    <style name="ThemeOverlay.MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="actionMenuTextAppearance">@style/MyBoldTextAppearance</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/my_dark_color</item>
    </style>
    <style name="MyBoldTextAppearance" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item> <!-- Set the background to null to remove the underline -->
        <!-- Add any other custom properties you want to apply to the EditText here -->
    </style>
    <style name="customButtongetstartedandsignin" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/light_dark</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/gray_border</item>
    </style>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>