<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Intro3Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intro3image" />

    <TextView
        android:id="@+id/getstartedfirsttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:elevation="4dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Hủy trực tuyến\nbất kỳ lúc nào"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:elevation="9dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Hãy tham gia hôm nay, còn chần\nchờ gì nữa."
        android:textColor="#D8D8D8"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:backgroundTint="@color/black" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/blackbottomgradient" />

</RelativeLayout>