<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/text1"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="-10dp"
                        android:fontFamily="@font/inter_bold"
                        android:letterSpacing="-0.04"
                        android:lineSpacingExtra="11sp"
                        android:text="Welcome to"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/inter_bold"
                        android:letterSpacing="-0.04"
                        android:lineSpacingExtra="11sp"
                        android:text="Multi Calculator"
                        android:textColor="#FFFFFF"
                        android:textSize="35sp" />

                    <ImageView
                        android:id="@+id/bottom_nav"
                        android:layout_width="27dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/nav" />

                </RelativeLayout>

                <!--category-->
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rel1"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/inter_semibold"
                        android:lineSpacingExtra="3sp"
                        android:text="Category"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                </LinearLayout>

                <!--calculator one - four-->
                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linear"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/one"
                                android:layout_width="match_parent"
                                android:layout_height="420dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cal1"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    app:cardCornerRadius="17dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:ignore="TooDeepLayout">

                                        <ImageView
                                            android:id="@+id/bmi"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/normalicon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/bmi"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="-8dp"
                                            android:fontFamily="@font/inter_bold"
                                            android:text="Normal"
                                            android:textColor="#03A9F4"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cal3"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginEnd="10dp"
                                    app:cardCornerRadius="17dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/ageim"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/ageicon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/ageim"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="-8dp"
                                            android:fontFamily="@font/inter_bold"
                                            android:text="Age"
                                            android:textColor="#03A9F4"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/two"
                                android:layout_width="match_parent"
                                android:layout_height="420dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cal2"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="20dp"
                                    app:cardCornerRadius="17dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/bmiim"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/bmiicon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/bmiim"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="-8dp"
                                            android:fontFamily="@font/inter_bold"
                                            android:text="Bmi"
                                            android:textColor="#03A9F4"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cal4"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginEnd="20dp"
                                    app:cardCornerRadius="17dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/discin"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/discounticon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/discin"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="-8dp"
                                            android:fontFamily="@font/inter_bold"
                                            android:text="Discount"
                                            android:textColor="#03A9F4"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--calculator 5-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cal5"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_below="@+id/lin"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="17dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/scie"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/scientificicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/scie"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="-18dp"
                            android:fontFamily="@font/inter_bold"
                            android:text="Scientific"
                            android:textColor="#03A9F4"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/cal5"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="295dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cal6"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginEnd="10dp"
                                    app:cardCornerRadius="17dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/emiim"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/emiicon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/emiim"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="-8dp"
                                            android:fontFamily="@font/inter_bold"
                                            android:text="Emi"
                                            android:textColor="#03A9F4"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cal7"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginEnd="20dp"
                                    app:cardCornerRadius="17dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/per"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/percentageicon" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/per"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="-8dp"
                                            android:fontFamily="@font/inter_bold"
                                            android:text="Percentage"
                                            android:textColor="#03A9F4"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomselector"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <!--home-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/homemain" />

                </RelativeLayout>

            </LinearLayout>


            <!--contact-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/contact" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>