<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EMICalculator">

    <LinearLayout
        android:id="@+id/bottomselector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#03A9F4">

                    <EditText
                        android:id="@+id/loan_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:autofillHints=""
                        android:gravity="center"
                        android:hint="Total Loan Amount"
                        android:inputType="number"
                        android:padding="30dp"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="#ffffff"
                        android:windowSoftInputMode="stateHidden" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#03A9F4">

                    <EditText
                        android:id="@+id/loan_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:autofillHints=""
                        android:gravity="center"
                        android:hint="Loan Interest (per annum)"
                        android:inputType="numberDecimal"
                        android:padding="30dp"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="#ffffff" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#03A9F4">

                    <EditText
                        android:id="@+id/loan_tenure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:autofillHints=""
                        android:gravity="center"
                        android:hint="Loan Tenure in month"
                        android:inputType="number"
                        android:padding="30dp"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="#ffffff" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#03A9F4">

                    <TextView
                        android:id="@+id/lbl_emi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/emi"
                        android:layout_centerHorizontal="true"
                        android:text="EMI (Monthly Payment)"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/emi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingStart="8dp"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="50sp"
                        tools:ignore="RtlSymmetry" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_calculate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#b468e4"
                android:backgroundTint="#03A9F4"
                android:onClick="calculate"
                android:text="Calculate"
                android:textColor="@android:color/white"
                tools:ignore="OnClick" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>