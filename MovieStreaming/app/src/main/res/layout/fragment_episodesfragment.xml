<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Fragmentsnetflix.Episodesfragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/seasonNoBtn"
        style="@style/customButtonVideoScreenDownload"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="0dp"
        android:text="Season 1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:icon="@drawable/baseline_arrow_drop_down_24"
        app:iconGravity="textEnd" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/episodesRc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>